{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tests",
    "build",
  ]
}
